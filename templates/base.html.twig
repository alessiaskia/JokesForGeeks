<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}JFG (Symfony project demo)
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('/assets/css/bootstrap.min.css') }}"/>
			<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
			<link rel="stylesheet" href="{{ asset('/assets/css/style.css') }}"/>
		{% endblock %}
	</head>
	<body>
		{% block body %}
			{# ----- nav bar ----- #}
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
				<a class="navbar-brand" href="{{ path('home') }}">Jokes for Geeks</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav ml-auto">
						<li>
							<a class="nav-link" href="{{ path('cart') }}">
								<i class="fas fa-shopping-cart"></i>
							</a>
						</li>
					</ul>
				</div>
			</nav>

			{# ----- block main : content that comes from other views ----- #}
			<div class="container-fluid">
				{% block main %}{% endblock %}
			</div>

			{# ----- footer ----- #}
			<footer class="container-fluid bg-light">
				<ul class="d-flex justify-content-around">
					<li>Alessia Scaccia 2021</li>
					<li>
						<a href="https://github.com/alessiaskia/JokesForGeeks">GitHub</a>
					</li>
					<li>Thanks to
						<a href="https://github.com/15Dkatz/official_joke_api">Official Joke API</a>
					</li>
				</ul>
			</footer>
			{% block javascripts %}{#{{ encore_entry_script_tags('app') }}#}{% endblock %}
		{% endblock %}
	</body>
</html>
